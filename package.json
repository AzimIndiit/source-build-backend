{
  "name": "source-build-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade Node.js backend for Source Build e-commerce marketplace",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "dev:debug": "DEBUG=app:* nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "docs:generate": "ts-node scripts/generateSwagger.ts",
    "docs:serve": "ts-node scripts/serveSwagger.ts",
    "postman:export": "tsx scripts/exportPostman.ts",
    "db:seed": "ts-node scripts/seed.ts",
    "db:seed:orders": "tsx src/seeds/seed-orders.ts",
    "db:reset": "ts-node scripts/resetDb.ts",
    "migration:create": "ts-node scripts/createMigration.ts",
    "migration:run": "ts-node scripts/runMigration.ts",
    "migration:rollback": "ts-node scripts/rollbackMigration.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.485.0",
    "@aws-sdk/lib-storage": "^3.876.0",
    "agenda": "^5.0.0",
    "aws-sdk": "^2.1531.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.5",
    "chalk": "^5.3.0",
    "compression": "^1.8.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dompurify": "^3.0.8",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^5.0.0-beta.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "memorystore": "^1.6.7",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-linkedin-oauth2": "git+https://github.com/auth0/passport-linkedin-oauth2",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "sharp": "^0.33.1",
    "sib-api-v3-sdk": "^8.5.0",
    "slugify": "^1.6.6",
    "socket.io": "^4.6.0",
    "stripe": "^14.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/kafkajs": "^1.8.2",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AzimIndiit/source-build-backend.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "jwt",
    "rest-api",
    "ecommerce",
    "marketplace"
  ],
  "author": "Indi IT Solutions",
  "license": "MIT"
}
